<odoo>
  <record id="view_arena_example_tree" model="ir.ui.view">
    <field name="name">arena.example.tree</field>
    <field name="model">arena.example</field>
    <field name="type">tree</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="active"/>
      </tree>
    </field>
  </record>

  <record id="view_arena_example_form" model="ir.ui.view">
    <field name="name">arena.example.form</field>
    <field name="model">arena.example</field>
    <field name="type">form</field>
    <field name="arch" type="xml">
      <form string="Arena Example">
        <sheet>
          <group>
            <field name="name"/>
            <field name="active"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_arena_example" model="ir.actions.act_window">
    <field name="name">Arena Example</field>
    <field name="res_model">arena.example</field>
    <field name="view_mode">tree,form</field>
  </record>

</odoo>
