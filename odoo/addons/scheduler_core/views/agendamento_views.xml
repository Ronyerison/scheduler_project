<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="scheduler_core_agendamento_view_tree" model="ir.ui.view">
        <field name="name">scheduler_core.agendamento.tree</field>
        <field name="model">scheduler_core.agendamento</field>
        <field name="arch" type="xml">
            <tree string="Agendamentos">
                <field name="data_hora_agendamento"/>
                <field name="cliente_id"/>
                <field name="recurso_id"/>
                <field name="responsavel_id"/>
                <field name="valor_total" sum="Total Geral"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="scheduler_core_agendamento_view_form" model="ir.ui.view">
        <field name="name">scheduler_core.agendamento.form</field>
        <field name="model">scheduler_core.agendamento</field>
        <field name="arch" type="xml">
            <form string="Agendamento">
                <header>
                    <button name="action_confirmar"
                            string="Confirmar"
                            type="object"
                            class="btn-primary"
                            attrs="{'invisible': [('status', '!=', 'AGENDADO')]}"/>

                    <button name="action_gerar_os"
                            string="Gerar OS"
                            type="object"
                            class="btn-secondary"
                            attrs="{'invisible': [('status', '!=', 'CONFIRMADO')]}"/>

                    <field name="status" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <span>Agendamento - </span>
                            <field name="cliente_id" readonly="1" style="display: inline;"/>
                        </h1>
                    </div>

                    <group>
                        <group name="datas" string="Datas">
                            <field name="data_hora_agendamento" widget="datetime" string="Data/Hora Inicio"/>
                            <field name="data_hora_fim" widget="datetime" string="Data/Hora Término"/>

                        </group>

                        <group name="info_basica" string="Informações do Agendamento">
                            <field name="cliente_id" options="{'no_create': False, 'no_create_edit': True}"/>
                            <field name="recurso_id" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="responsavel_id" readonly="1"/>
                            <field name="valor_total"
                                   attrs="{'readonly': [('procedimento_ids', '!=', [])]}"/>
                        </group>

                        <group string="Recorrência" name="recurrence">
                            <field name="is_recurring"/>
                            <field name="recurrence_unit" attrs="{'invisible': [('is_recurring', '=', False)]}"/>
                            <field name="recurrence_interval" attrs="{'invisible': [('is_recurring', '=', False)]}"/>
                            <field name="recurrence_count" attrs="{'invisible': [('is_recurring', '=', False)]}"/>
                        </group>
                    </group>
                    <group>
                        <field name="descricao_procedimentos"/>
                    </group>

                    <notebook>
                        <page name="procedimentos" string="Procedimentos">
                            <field name="procedimento_ids"
                                   options="{'no_create': True, 'no_create_edit': True}">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="duracao_minutos"/>
                                    <field name="valor" sum="Total"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Ordens de Serviço">
                            <field name="ordem_servico_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="status"/>
                                    <field name="data_inicio"/>
                                    <field name="data_fim"/>
                                    <field name="responsavel_execucao_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>

                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Calendar View -->
    <record id="agendamento_calendar_view" model="ir.ui.view">
        <field name="name">agendamento.calendar</field>
        <field name="model">scheduler_core.agendamento</field>
        <field name="arch" type="xml">
            <calendar string="Agenda"
                      date_start="data_hora_agendamento"
                      date_stop="data_hora_fim"
                      color="recurso_id"
                      quick_add="False"
                      event_open_popup="true">
                <field name="cliente_id"/>
                <field name="recurso_id"/>
                <field name="valor_total"/>
            </calendar>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="agendamento_kanban_view" model="ir.ui.view">
        <field name="name">agendamento.kanban</field>
        <field name="model">scheduler_core.agendamento</field>
        <field name="arch" type="xml">
            <kanban string="Agendamentos" default_group_by="recurso_id" create="true" quick_create="false">
                <field name="data_hora_agendamento"/>
                <field name="cliente_id"
                   domain="[('tipo','=','CLIENTE')]"
                   options="{'no_create': True, 'no_quick_create': True}"/>
                <field name="recurso_id"/>
                <field name="responsavel_id"/>
                <field name="valor_total"/>
                <field name="status"/>
                <field name="descricao_procedimentos"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click mb-3 rounded-3 shadow-sm">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings d-flex justify-content-between align-items-center">
                                    <strong class="o_kanban_record_title">
                                        <field name="cliente_id"/>
                                    </strong>
                                    <small class="text-end">
                                        <field name="data_hora_agendamento" widget="datetime"/>
                                    </small>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="row">
                                    <div class="col-6 d-flex align-items-center">
                                        <i class="fa fa-user me-2" title="Responsável"/> <field name="responsavel_id"/>
                                    </div>
                                    <div class="col-6 d-flex justify-content-end align-items-center">
                                        <i class="fa fa-money me-2" title="Valor Total"/> R$ <field name="valor_total"/>
                                    </div>
                                </div>
                                <!-- Barra de progresso por status -->
                                <div class="row mt-2">
                                    <div class="col-12">
                                        <t t-set="status_progress" t-value="{
                                            'AGENDADO': 0,
                                            'CONFIRMADO': 25,
                                            'EM_ANDAMENTO': 50,
                                            'CONCLUIDO': 100,
                                            'CANCELADO': 0
                                        }"/>
                                        <div class="progress" style="height: 10px;">
                                            <div class="progress-bar bg-success"
                                                 t-att-style="'width: ' + (
                                                     record.status ? (status_progress[record.status.raw_value] || 0) : 0
                                                 ) + '%'"/>
                                        </div>
                                        <small>
                                            Status: <field name="status"/>
                                        </small>
                                    </div>
                                </div>

                                <!-- Descrição dos procedimentos -->
                                <div class="row mt-2" t-if="record.descricao_procedimentos">
                                    <div class="col-12">
                                        <small>
                                            <span style="white-space: pre-wrap; word-break: break-word;">
                                                <field name="descricao_procedimentos"/>
                                            </span>
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="agendamento_search_view" model="ir.ui.view">
        <field name="name">agendamento.search</field>
        <field name="model">scheduler_core.agendamento</field>
        <field name="arch" type="xml">
            <search string="Pesquisar Agendamentos">
                <field name="cliente_id" string="Cliente"
                       filter_domain="[('cliente_id', 'ilike', self)]"/>
                <field name="recurso_id" string="Estação"/>
                <field name="responsavel_id" string="Responsável"/>
                <field name="data_hora_agendamento" string="Data"/>

                <separator/>
                <filter name="hoje" string="Hoje"
                        domain="[('data_hora_agendamento', '&gt;=', context_today()),
                                ('data_hora_agendamento', '&lt;', (context_today() + datetime.timedelta(days=1)).strftime('%Y-%m-%d'))]"/>
                <filter name="esta_semana" string="Esta Semana"
                        domain="[('data_hora_agendamento', '&gt;=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <filter name="este_mes" string="Este Mês"
                        domain="[('data_hora_agendamento', '&gt;=', (context_today() - datetime.timedelta(days=30)).strftime('%Y-%m-%d'))]"/>

                <separator/>

                <group expand="0" string="Agrupar Por">
                    <filter name="group_by_recurso" string="Estação"
                            context="{'group_by': 'recurso_id'}"/>
                    <filter name="group_by_responsavel" string="Responsável"
                            context="{'group_by': 'responsavel_id'}"/>
                    <filter name="group_by_cliente" string="Cliente"
                            context="{'group_by': 'cliente_id'}"/>
                    <filter name="group_by_data" string="Data"
                            context="{'group_by': 'data_hora_agendamento:day'}"/>
                    <filter name="group_by_data" string="Status"
                            context="{'group_by': 'status'}"/>
                </group>
            </search>
        </field>
    </record>


    <!-- Action -->
    <record id="scheduler_core_agendamento_action" model="ir.actions.act_window">
        <field name="name">Agendamentos</field>
        <field name="res_model">scheduler_core.agendamento</field>
        <field name="view_mode">kanban,calendar,tree,form</field>
        <field name="context">{
            'search_default_esta_semana': 1,
            'search_default_group_by_recurso': 1
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crie seu primeiro agendamento!
            </p>
            <p>
                Gerencie os agendamentos de procedimentos, controle valores
                e acompanhe o status dos pagamentos.
            </p>
        </field>
    </record>


</odoo>