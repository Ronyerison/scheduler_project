<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="scheduler_core_agendamento_view_tree" model="ir.ui.view">
        <field name="name">scheduler_core.agendamento.tree</field>
        <field name="model">scheduler_core.agendamento</field>
        <field name="arch" type="xml">
            <tree string="Agendamentos" decoration-bf="valor_desconto != 0" decoration-muted="valor_pago == 0">
                <field name="data_agendamento"/>
                <field name="cliente_id"/>
                <field name="estacao_id"/>
                <field name="responsavel_id"/>
                <field name="valor_total" sum="Total Geral"/>
                <field name="valor_pago" sum="Total Pago"/>
                <field name="valor_desconto" sum="Total Desconto"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="scheduler_core_agendamento_view_form" model="ir.ui.view">
        <field name="name">scheduler_core.agendamento.form</field>
        <field name="model">scheduler_core.agendamento</field>
        <field name="arch" type="xml">
            <form string="Agendamento">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <span>Agendamento - </span>
                            <field name="cliente_id" readonly="1" style="display: inline;"/>
                        </h1>
                    </div>

                    <group>
                        <group name="info_basica" string="Informações do Agendamento">
                            <field name="data_agendamento" widget="datetime"/>
                            <field name="cliente_id" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="estacao_id" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="responsavel_id" readonly="1"/>
                        </group>

                        <group name="valores" string="Valores">
                            <field name="valor_total"
                                   attrs="{'readonly': [('procedimento_ids', '!=', [])]}"/>
                            <field name="valor_pago"/>
                            <field name="valor_desconto" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page name="procedimentos" string="Procedimentos">
                            <field name="procedimento_ids"
                                   options="{'no_create': True, 'no_create_edit': True}">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="duracao_minutos"/>
                                    <field name="valor" sum="Total"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>

                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Calendar View -->
    <record id="agendamento_calendar_view" model="ir.ui.view">
        <field name="name">agendamento.calendar</field>
        <field name="model">scheduler_core.agendamento</field>
        <field name="arch" type="xml">
            <calendar string="Agenda"
                      date_start="data_agendamento"
                      color="estacao_id"
                      quick_add="False"
                      event_open_popup="true">
                <field name="cliente_id"/>
                <field name="estacao_id"/>
                <field name="valor_total"/>
            </calendar>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="agendamento_kanban_view" model="ir.ui.view">
        <field name="name">agendamento.kanban</field>
        <field name="model">scheduler_core.agendamento</field>
        <field name="arch" type="xml">
            <kanban string="Agendamentos" default_group_by="estacao_id" create="true" quick_create="false">
                <field name="data_agendamento"/>
                <field name="cliente_id"
                   domain="[('tipo','=','CLIENTE')]"
                   options="{'no_create': True, 'no_quick_create': True}"/>
                <field name="estacao_id"/>
                <field name="responsavel_id"/>
                <field name="valor_total"/>
                <field name="valor_pago"/>
                <field name="valor_desconto"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings d-flex justify-content-between align-items-center">
                                    <strong class="o_kanban_record_title">
                                        <field name="cliente_id"/>
                                    </strong>
                                    <small class="text-end">
                                        <field name="data_agendamento" widget="datetime"/>
                                    </small>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="row">
                                    <div class="col-6 d-flex align-items-center">
                                        <i class="fa fa-user me-2"/> <field name="responsavel_id"/>
                                    </div>
                                    <div class="col-6 d-flex justify-content-end align-items-center">
                                        <i class="fa fa-money me-2"/> R$ <field name="valor_total"/>
                                    </div>
                                </div>
                                <div class="row" t-if="record.valor_pago.raw_value > 0">
                                    <div class="col-12">
                                        <div class="progress" style="height: 10px;">
                                            <div class="progress-bar bg-success"
                                                 t-att-style="'width: ' + (record.valor_pago.raw_value / record.valor_total.raw_value * 100) + '%'"/>
                                        </div>
                                        <small>Pago: R$ <field name="valor_pago"/>
                                               <span t-if="record.valor_desconto.raw_value != 0" class="text-success">
                                                   (Desconto: R$ <field name="valor_desconto"/>)
                                               </span>
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="agendamento_search_view" model="ir.ui.view">
        <field name="name">agendamento.search</field>
        <field name="model">scheduler_core.agendamento</field>
        <field name="arch" type="xml">
            <search string="Pesquisar Agendamentos">
                <field name="cliente_id" string="Cliente"
                       filter_domain="[('cliente_id', 'ilike', self)]"/>
                <field name="estacao_id" string="Estação"/>
                <field name="responsavel_id" string="Responsável"/>
                <field name="data_agendamento" string="Data"/>

                <separator/>
                <filter name="hoje" string="Hoje"
                        domain="[('data_agendamento', '&gt;=', context_today()),
                                ('data_agendamento', '&lt;', (context_today() + datetime.timedelta(days=1)).strftime('%Y-%m-%d'))]"/>
                <filter name="esta_semana" string="Esta Semana"
                        domain="[('data_agendamento', '&gt;=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <filter name="este_mes" string="Este Mês"
                        domain="[('data_agendamento', '&gt;=', (context_today() - datetime.timedelta(days=30)).strftime('%Y-%m-%d'))]"/>

                <separator/>
                <filter name="nao_pago" string="Não Pago"
                        domain="[('valor_pago', '=', 0)]"/>
                <filter name="parcialmente_pago" string="Parcialmente Pago"
                        domain="[('valor_pago', '&gt;', 0), ('valor_pago', '&lt;', 'valor_total')]"/>
                <filter name="totalmente_pago" string="Totalmente Pago"
                        domain="[('valor_pago', '&gt;=', 'valor_total')]"/>
                <filter name="com_desconto" string="Com Desconto"
                        domain="[('valor_desconto', '&gt;', 0)]"/>

                <group expand="0" string="Agrupar Por">
                    <filter name="group_by_estacao" string="Estação"
                            context="{'group_by': 'estacao_id'}"/>
                    <filter name="group_by_responsavel" string="Responsável"
                            context="{'group_by': 'responsavel_id'}"/>
                    <filter name="group_by_cliente" string="Cliente"
                            context="{'group_by': 'cliente_id'}"/>
                    <filter name="group_by_data" string="Data"
                            context="{'group_by': 'data_agendamento:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="agendamento_pivot_view" model="ir.ui.view">
        <field name="name">agendamento.pivot</field>
        <field name="model">scheduler_core.agendamento</field>
        <field name="arch" type="xml">
            <pivot string="Análise de Agendamentos">
                <field name="estacao_id" type="row"/>
                <field name="data_agendamento" interval="month" type="col"/>
                <field name="valor_total" type="measure"/>
                <field name="valor_pago" type="measure"/>
                <field name="valor_desconto" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Graph View -->
    <record id="agendamento_graph_view" model="ir.ui.view">
        <field name="name">agendamento.graph</field>
        <field name="model">scheduler_core.agendamento</field>
        <field name="arch" type="xml">
            <graph string="Gráfico de Agendamentos" type="line">
                <field name="data_agendamento" interval="day"/>
                <field name="valor_total" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Action -->
    <record id="scheduler_core_agendamento_action" model="ir.actions.act_window">
        <field name="name">Agendamentos</field>
        <field name="res_model">scheduler_core.agendamento</field>
        <field name="view_mode">kanban,calendar,tree,form,pivot,graph</field>
        <field name="context">{
            'search_default_esta_semana': 1,
            'search_default_group_by_estacao': 1
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crie seu primeiro agendamento!
            </p>
            <p>
                Gerencie os agendamentos de procedimentos, controle valores
                e acompanhe o status dos pagamentos.
            </p>
        </field>
    </record>

    <!-- Menu Item -->

</odoo>