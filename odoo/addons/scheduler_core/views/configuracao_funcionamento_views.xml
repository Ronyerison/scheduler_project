<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="configuracao_funcionamento_tree_view" model="ir.ui.view">
        <field name="name">configuracao.funcionamento.tree</field>
        <field name="model">scheduler_core.configuracao_funcionamento</field>
        <field name="arch" type="xml">
            <tree string="Configurações de Funcionamento">
                <field name="name"/>
                <field name="dias_funcionamento_display" string="Dias"/>
                <field name="horario_inicio_display" string="Início"/>
                <field name="horario_fim_display" string="Fim"/>
                <field name="tem_intervalo_almoco" string="Intervalo Almoço"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="configuracao_funcionamento_form_view" model="ir.ui.view">
        <field name="name">configuracao.funcionamento.form</field>
        <field name="model">scheduler_core.configuracao_funcionamento</field>
        <field name="arch" type="xml">
            <form string="Configuração de Funcionamento">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object"
                                class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button"
                                   options='{"terminology": "archive"}'/>
                        </button>
                    </div>

                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Nome da configuração"/>
                        </h1>
                    </div>

                    <group>
                        <group name="dias_semana" string="Dias de Funcionamento">
                            <field name="segunda_feira"/>
                            <field name="terca_feira"/>
                            <field name="quarta_feira"/>
                            <field name="quinta_feira"/>
                            <field name="sexta_feira"/>
                            <field name="sabado"/>
                            <field name="domingo"/>
                        </group>

                        <group name="horarios_principais" string="Horários de Funcionamento">
                            <field name="horario_inicio" widget="float_time"/>
                            <field name="horario_fim" widget="float_time"/>
                            <field name="horario_inicio_display" readonly="1"/>
                            <field name="horario_fim_display" readonly="1"/>
                        </group>
                    </group>

                    <group name="intervalo_almoco" string="Intervalo para Almoço">
                        <group>
                            <field name="tem_intervalo_almoco"/>
                        </group>
                        <group>
                            <field name="almoco_inicio" widget="float_time"
                                   attrs="{'invisible': [('tem_intervalo_almoco', '=', False)],
                                          'required': [('tem_intervalo_almoco', '=', True)]}"/>
                            <field name="almoco_fim" widget="float_time"
                                   attrs="{'invisible': [('tem_intervalo_almoco', '=', False)],
                                          'required': [('tem_intervalo_almoco', '=', True)]}"/>
                        </group>
                    </group>

                    <group name="resumo" string="Resumo">
                        <field name="dias_funcionamento_display" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="configuracao_funcionamento_search_view" model="ir.ui.view">
        <field name="name">configuracao.funcionamento.search</field>
        <field name="model">scheduler_core.configuracao_funcionamento</field>
        <field name="arch" type="xml">
            <search string="Pesquisar Configurações">
                <field name="name" string="Nome"
                       filter_domain="[('name', 'ilike', self)]"/>

                <separator/>
                <filter name="ativas" string="Ativas"
                        domain="[('active', '=', True)]"/>
                <filter name="inativas" string="Inativas"
                        domain="[('active', '=', False)]"/>

                <separator/>
                <filter name="com_intervalo_almoco" string="Com Intervalo Almoço"
                        domain="[('tem_intervalo_almoco', '=', True)]"/>
                <filter name="sem_intervalo_almoco" string="Sem Intervalo Almoço"
                        domain="[('tem_intervalo_almoco', '=', False)]"/>

                <separator/>
                <filter name="funciona_sabado" string="Funciona Sábado"
                        domain="[('sabado', '=', True)]"/>
                <filter name="funciona_domingo" string="Funciona Domingo"
                        domain="[('domingo', '=', True)]"/>
                <filter name="apenas_dias_uteis" string="Apenas Dias Úteis"
                        domain="[('sabado', '=', False), ('domingo', '=', False)]"/>

                <group expand="0" string="Agrupar Por">
                    <filter name="group_by_ativo" string="Status"
                            context="{'group_by': 'active'}"/>
                    <filter name="group_by_intervalo_almoco" string="Intervalo Almoço"
                            context="{'group_by': 'tem_intervalo_almoco'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Kanban View (opcional) -->
    <record id="configuracao_funcionamento_kanban_view" model="ir.ui.view">
        <field name="name">configuracao.funcionamento.kanban</field>
        <field name="model">scheduler_core.configuracao_funcionamento</field>
        <field name="arch" type="xml">
            <kanban string="Configurações de Funcionamento">
                <field name="name"/>
                <field name="active"/>
                <field name="dias_funcionamento_display"/>
                <field name="horario_inicio_display"/>
                <field name="horario_fim_display"/>
                <field name="tem_intervalo_almoco"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <div class="o_kanban_record_top_right">
                                    <field name="active" widget="boolean_toggle"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="row">
                                    <div class="col-12">
                                        <i class="fa fa-calendar-o"/> <field name="dias_funcionamento_display"/>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <i class="fa fa-clock-o"/>
                                        <field name="horario_inicio_display"/> às <field name="horario_fim_display"/>
                                    </div>
                                </div>
                                <div class="row" t-if="record.tem_intervalo_almoco.raw_value">
                                    <div class="col-12">
                                        <i class="fa fa-cutlery"/> Intervalo para almoço
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Atualizar a action para incluir a view kanban -->
    <record id="configuracao_funcionamento_action" model="ir.actions.act_window">
        <field name="name">Horários de Funcionamento</field>
        <field name="res_model">scheduler_core.configuracao_funcionamento</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crie sua primeira configuração de funcionamento!
            </p>
            <p>
                As configurações de funcionamento definem os dias da semana e horários
                em que as estações estarão disponíveis para agendamento.
            </p>
        </field>
    </record>
</odoo>