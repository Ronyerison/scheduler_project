<odoo>
    <record id="view_wizard_gerar_os_form" model="ir.ui.view">
        <field name="name">wizard.gerar.os.form</field>
        <field name="model">wizard.gerar.os</field>
        <field name="arch" type="xml">
            <form string="Gerar Ordem de ServiÃ§o">
                <group>
                    <field name="agendamento_id" readonly="1"/>
                    <field name="cliente_id" readonly="1"/>
                    <field name="recurso_id" readonly="1"/>
                    <field name="responsavel_execucao_id"/>
                    <field name="data_inicio"/>
                    <field name="descricao_execucao"/>
                    <field name="valor_total" attrs="{'readonly': [('procedimento_ids', '!=', [])]}"/>
                    <field name="valor_pago"/>
                    <field name="valor_desconto" readonly="1"/>
                    <field name="procedimento_ids" widget="many2many_tags"/>
                </group>
                <footer>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    <button name="action_confirmar_os" string="Confirmar OS" type="object" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
